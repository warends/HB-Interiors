            <a href="#"><i class="fa fa-houzz"></i></a>
          </div>
      </div>
      <div class="navbar-menu black-shadow">

        <a class="logo" ui-sref="home"><h2>HB</h2><h3>Hayley Bagwell<br />Interior Design</h3></a>

        <ul class="main-menu" ng-class="{'active':selected}">
          <li><a href="/">Home</a></li>
          <li><a ui-sref="e-design">E-Design</a></li>
          <li><a ui-sref="services.detail({slug: 'interior-design'})">Services</a></li>
